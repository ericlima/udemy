<h1>Listing All Articles<h1>

<%= link_to "create new article", new_article_path %> <p/>

<table class="table table-hover">

  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>show</th>
    <th>edit</th>
    <th>delete</th>
  </tr>

  <% @articles.each do |article| %>

  <tr>
    <td><%= article.title %></td>
    <td><%= article.description %></td>
    <td><%= link_to "show", article_path(article), class:"btn btn-primary" %></td>
    <td><%= link_to "edit", edit_article_path(article) %></td>
    <td><%= link_to "delete", article_path(article), method: :delete, data: { confirm: "confirma?" } %></td>
  </tr>

  <% end %>

</table>

